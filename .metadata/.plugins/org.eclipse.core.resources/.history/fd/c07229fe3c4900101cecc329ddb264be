package com.sample.Dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import org.springframework.context.annotation.Profile;
import org.springframework.stereotype.Component;

@Component

//there are many condition for Profile Registration......
//This will excute only when Profile is activated with name "Postgres"
@Profile(value= {"Postgres"})

//--Like this we can register the Multiple Profiles at same time
//@Profile(value= {"Postgres", "Mysql","MangoDB"})

//---This will Excute Only when "Postgres"  -->named Profile is not registerd...or not added in VM arguments...
//@Profile(value= {"!Postgres"})
public class PostgresSqlConnection implements IConnection{
	
	public PostgresSqlConnection() {
		System.out.println("#PostgresSqlConnection");
	}

	public Connection getConnection() throws ClassNotFoundException, SQLException {
		 Class.forName("org.postgresql.Driver");
		Connection connection = DriverManager.getConnection("jdbc:postgresql://localhost:5432/MyDatabase", "postgres", "postgres123");
		return connection;
	}

}
